{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug",
            "type": "gdb",
            "request": "attach",
            "executable": "draw/main.bin",
            "target": "localhost:1234",
            "remote": true,
            "cwd": "${workspaceFolder}",
            "gdbpath": "gdb",
            "autorun": [
                "set architecture i8086",
                "break *0x7c00",
                "continue"
            ],
            "stopAtConnect": true,
            "stopAtEntry": true,
        }
    ]
}